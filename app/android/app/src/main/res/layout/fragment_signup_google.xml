<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="@android:color/holo_blue_dark"
    android:id="@+id/signup_google_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:background="@android:color/white"
        android:animateLayoutChanges="true">

        <TextView
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:text="TC id"
            android:textSize="12sp"
            android:id="@+id/signup_google_tcknTag_textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/signup_google_tckn_editText"
            app:layout_constraintBottom_toBottomOf="@id/signup_google_tckn_editText"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            />

        <EditText
            android:id="@+id/signup_google_tckn_editText"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:layout_height="@dimen/height_edit_text"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/signup_google_tcknTag_textView"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="number"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:text="IBAN"
            android:textSize="12sp"
            android:id="@+id/signup_ibanTag_textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/signup_google_iban_editText"
            app:layout_constraintBottom_toBottomOf="@id/signup_google_iban_editText"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            />

        <EditText
            android:id="@+id/signup_google_iban_editText"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:layout_height="@dimen/height_edit_text"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/signup_ibanTag_textView"
            app:layout_constraintTop_toBottomOf="@id/signup_google_tckn_editText"
            android:visibility="gone"
            />
        <ImageButton
            android:id="@+id/signup_google_location_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_google_iban_editText"
            android:src="@drawable/ic_location"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp">
        </ImageButton>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Find your location"
            android:textSize="12sp"
            android:id="@+id/signup_google_location_textView"
            app:layout_constraintEnd_toEndOf="@id/signup_google_location_button"
            app:layout_constraintStart_toStartOf="@id/signup_google_location_button"
            app:layout_constraintTop_toBottomOf="@id/signup_google_location_button"
            android:gravity="center_horizontal"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_google_isTrader_switch"
            app:layout_constraintTop_toBottomOf="@id/signup_google_iban_editText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/signup_google_location_button"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/signup_google_isTrader_switch"
            app:layout_constraintTop_toTopOf="@+id/signup_google_isTrader_switch"
            app:layout_constraintBottom_toBottomOf="@id/signup_google_isTrader_switch"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trader"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/signup_google_isTrader_switch"
            app:layout_constraintTop_toTopOf="@+id/signup_isTrader_switch"
            app:layout_constraintBottom_toBottomOf="@id/signup_google_isTrader_switch"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textAllCaps="false"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/signup_google_location_button"
            app:layout_constraintTop_toBottomOf="@id/signup_google_isTrader_switch"
            app:layout_constraintBottom_toBottomOf="@id/signup_google_location_textView"
            android:id="@+id/signup_google_submit_button">
        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>